---
import Icon from "./Icon.astro";
interface Props {
	image: string;
	className?: string;
	title: string;
	body: string;
	href: string;
	tags: string[];
	repoUrl: string;
	demoUrl: string;
}

const { image, className, title, body, href, tags, repoUrl, demoUrl } = Astro.props;
---

<li class=`list-none text-white rounded-md hover:bg-gradient ${className || ''}`>
	<img class="w-full rounded-t-md" src={image} alt={title} />
	<div class="card-content bg-[#23262d] opacity-80 p-4 rounded-b-md">
		<h2 class="m-0 text-2xl font-bold">
			{title}
		</h2>
		<p class="my-4">
			{body}
		</p>
		<ul class="flex flex-wrap gap-2 mt-2">
			{tags.map((tag) => (
				<li class="px-2 rounded-lg text-sm bg-primary-dark border-accent border-[1px]">{tag}</li>
			))}
		</ul>
		<ul class="links flex justify-end gap-2 mt-2">
			<li>
				<a href={repoUrl}>
					<Icon icon="github" />
					<span>c√≥digo</span>
				</a>
			</li>
			<li>
				<a href={demoUrl}>
					<Icon icon="web" />
					<span>demo</span>
				</a>
			</li>
		</ul>
	</div>
</li>
<style>
	.card-content {
		&:hover h2 {
			@apply text-accent;
		}
	}
	.links {
		li {
			@apply py-2 px-2 text-sm bg-accent text-black rounded-lg cursor-pointer hover:bg-accent-dark hover:text-white font-bold;
		}
		a {
			@apply flex items-center gap-2 w-fit;
		}
	}
</style>
